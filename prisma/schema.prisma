datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String     @id
  email       String
  name        String
  image       String
  bookmarks   Bookmark[]
  authority   Authority? @relation(fields: [authorityId], references: [id])
  authorityId String?
  tokens      Token[]
}

model Token {
  id         String   @id
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId     String
  updateTime DateTime
  expiryTime DateTime
}

model Bookmark {
  id         String   @id @default(cuid())
  url        String   @unique
  title      String
  createTime DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId     String
}

model Cache {
  id         String    @id
  value      String?
  expiryTime DateTime?
}

model Authority {
  id    String @id
  users User[]
}
